#include <bits/stdc++.h>
using namespace std;

struct Node {
int data;
Node* next;
}

Node* head;

void Reverse ()
{
Node* current = head;
Node* prev, *nextnode;
prev = NULL;

while(current != NULL)
{
nextnode = current->next;   //save information of the next node
current->next = prev;
prev = current;
current = nextnode;
}
//adjust the head
head = prev;          //because when the loop ends prev will point to the first element.

int main()
{
....
}
